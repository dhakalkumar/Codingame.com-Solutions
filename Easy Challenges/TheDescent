import java.util.*;
import java.io.*;
import java.math.*;

class Player {

    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);

        // game loop
         while (true) {
            int maxH=0,imax=0;
            for (int i = 0; i <8; i++) {
                int mountainH = in.nextInt(); // represents the height of one mountain, from 9 to 0.
                // find the highest mountain
                if(mountainH>maxH){   // if new mountain height is greater than previous highest mountain
                    maxH=mountainH;  // then this is the new highest mountain
                    imax=i;           // save the mountain no., i.e. loop no. i, in a variable
                    
                    }
              
              }
              System.out.println(imax); // print the index of the highest mountain
        }
    }
}
